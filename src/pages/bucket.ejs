<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/main.css">
    <title>S3 Explorer - Bucket</title>
</head>
<body>
    <header>
        <h1>S3 Explorer - My Buckets</h1>
        <a href="/"><button>Home</button></a>
        <a href="/config/list"><button>Change configuration</button></a>
    </header>
    <% if (buckets) { %>
        <ul>
            <% buckets.forEach(bucket => { %>
                <% if (bucket.Name.length > 0) { %>
                    <li>
                        <%= bucket.Name %>
                    <% if (bucket.cacheReady) { %>
                            <a href="/bucket/<%= bucket.Name %>"><button>List <%= bucket.size %> Objects</button></a>
                            <a href="/explore/<%= bucket.Name %>"><button>Explorer</button></a>
                            <a href="/bucket/reache/<%= bucket.Name %>"><button>Refresh Cache</button>
                    <% } else { %>
                            <a href="/bucket/cache/<%= bucket.Name %>"><button>Download Cache</button></a>
                    <% } %>
                    </li>
                <% } %>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No buckets found</p>
    <% } %>
</body>
</html>